@model DetailViewModel

@{
    ViewData["Title"] = "Detail";
}

<h1 class="text-center">@Model.Product.Name Details</h1>

<hr class="my-4" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 text-center">
                        <img src="/images/@(Model.Product.Id).jpg" class="img-fluid rounded" alt="@Model.Product.Name" />
                    </div>
                    <div class="col-md-6">
                        <h3 class="card-title">@Model.Product.Name</h3>
                        <p class="card-text">@Model.Product.Description</p>

                        <h4 class="text-primary">Price: @Model.Product.Item.Price.ToString("C")</h4>

                        <div class="mt-3">
                            <h5>Categories:</h5>
                            <ul>
                                @foreach (var category in Model.Categories)
                                {
                                    <li>@category.Name</li>
                                }
                            </ul>
                        </div>


                        <div class="mt-4">
                            <form asp-action="Detail">
                                <div class="form-group">
                                    <button asp-action="AddToCart"
                                            asp-controller="Home"
                                            asp-route-ItemId="@Model.Product.ItemId"
                                            type="submit" class="btn btn-success btn-lg btn-block">
                                        Add to Cart
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
