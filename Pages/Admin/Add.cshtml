@page
@model NeoStore.Pages.Admin.AddModel
@{
    ViewData["Title"] = "Add Product";
}

<h1 class="mb-4">Add Product</h1>
<hr />

<form method="post" enctype="multipart/form-data">
    <!-- Product Name -->
    <div class="row mb-3">
        <label asp-for="Product.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.Name" class="form-control" placeholder="Enter product name" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
    </div>

    <!-- Product Description -->
    <div class="row mb-3">
        <label asp-for="Product.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Product.Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
    </div>

    <!-- Product Price -->
    <div class="row mb-3">
        <label asp-for="Product.Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.Price" class="form-control" placeholder="Enter product price" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
    </div>

    <!-- Quantity In Stock -->
    <div class="row mb-3">
        <label asp-for="Product.QuantityInStock" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.QuantityInStock" class="form-control" placeholder="Enter quantity in stock" />
            <span asp-validation-for="Product.QuantityInStock" class="text-danger"></span>
        </div>
    </div>

    <!-- Product Image -->
    <div class="row mb-4">
        <label asp-for="Product.Picture" class="col-sm-2 col-form-label">Product Image</label>
        <div class="col-sm-10">
            <input asp-for="Product.Picture" class="form-control" type="file" />
            <span asp-validation-for="Product.Picture" class="text-danger"></span>
        </div>
    </div>

    <!-- Submit Button -->
    <div class="row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Add Product</button>
        </div>
    </div>
</form>
